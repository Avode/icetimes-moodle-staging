<div class="ouadmin-wrapper">

    <h2 class="ouadmin-page-title">
        {{pagetitle}}: {{ouname}}
    </h2>

    {{#issiteadmin}}
    <form method="get" class="mb-3">
        <input type="hidden" name="tab" value="{{currenttab}}">
        <div class="row g-2 align-items-center">
            <div class="col-auto">
                <label class="col-form-label">{{selectou}}</label>
            </div>
            <div class="col-auto">
                <select name="ouid" class="form-select" onchange="this.form.submit()">
                    {{#ouoptions}}
                        <option value="{{id}}" {{#selected}}selected{{/selected}}>{{name}}</option>
                    {{/ouoptions}}
                </select>
            </div>
        </div>
    </form>
    {{/issiteadmin}}

    <!-- Summary + quick actions -->
    <div class="card ouadmin-maincard mb-4">
        <div class="card-body row">
            <div class="col-md-8 border-end">
                <div class="fw-semibold mb-1 text-center">
                    {{summary.title}}
                </div>
                <div class="text-muted text-center mb-2">
                    {{summary.subtitle}}
                </div>
                <div class="text-center mb-2">
                    <span class="badge bg-light text-dark px-3 py-2 ouadmin-badge-pill">
                        Current OU: <strong>{{summary.ouname}}</strong>
                    </span>
                </div>
                <div class="row mt-3 text-center">
                    <div class="col-6 col-md-3 mb-2">
                        <div class="ouadmin-subtitle">{{labels.faculties}}</div>
                        <div class="ouadmin-bignumber">{{summary.totalfaculties}}</div>
                    </div>
                    <div class="col-6 col-md-3 mb-2">
                        <div class="ouadmin-subtitle">{{labels.intakes}}</div>
                        <div class="ouadmin-bignumber">{{summary.totalintakes}}</div>
                    </div>
                    <div class="col-6 col-md-3 mb-2">
                        <div class="ouadmin-subtitle">{{labels.teachers}}</div>
                        <div class="ouadmin-bignumber">{{summary.totalteachers}}</div>
                    </div>
                    <div class="col-6 col-md-3 mb-2">
                        <div class="ouadmin-subtitle">{{labels.students}}</div>
                        <div class="ouadmin-bignumber">{{summary.totalstudents}}</div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="fw-semibold mb-1">{{quickactions.title}}</div>
                <p class="text-muted small">
                    {{quickactions.description}}
                </p>
                <a href="{{quickactions.addurl}}" class="btn btn-primary w-100 mb-2">
                    + {{quickactions.addlabel}}
                </a>
                <a href="{{quickactions.refreshurl}}" class="btn btn-outline-secondary w-100">
                    {{quickactions.refreshlabel}}
                </a>
            </div>
        </div>
    </div>

    <!-- Tabs -->
    <ul class="nav nav-tabs mb-3">
        {{#tabs}}
        <li class="nav-item">
            <a href="{{url}}" class="nav-link {{#active}}active{{/active}}">{{label}}</a>
        </li>
        {{/tabs}}
    </ul>

    <!-- Table card -->
    <div class="card ouadmin-tablecard">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div class="fw-semibold">{{table.title}}</div>
            <span class="badge bg-info text-dark ouadmin-badge-pill">
                {{table.badge}}
            </span>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered {{#table.hasrows}}ouadmin-datatable{{/table.hasrows}}">
                    <thead>
                        <tr>
                            {{#table.columns}}
                                <th>{{.}}</th>
                            {{/table.columns}}
                        </tr>
                    </thead>
                    <tbody>
                        {{#table.hasrows}}
                            {{#table.rows}}
                                <tr>
                                    {{#cells}}
                                        <td>{{{value}}}</td>
                                    {{/cells}}
                                </tr>
                            {{/table.rows}}
                        {{/table.hasrows}}

                        {{^table.hasrows}}
                            <tr>
                                <td colspan="{{table.colspan}}" class="text-center text-muted">
                                    {{no_records}}
                                </td>
                            </tr>
                        {{/table.hasrows}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
